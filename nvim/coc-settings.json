{
    "omnisharp.version": "v1.37.3",
    "omnisharp.trace.server": "information",
    "omnisharp.debug.server": true,
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "clang": {
                    "extraargs": [
                        "-std=c++17"
                    ]
                },
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    },
    "prettier.tabWidth": 4,
    "prettier.formatterPriority": 9
}
