# Kimi's SXHKD SCRIPT 
# not finished, wip
#

#
# Run programms from hotkey
#

# terminal emulator
super + Return
    alacritty	

# lock screen
super + shift + e
	xsecurelock

# open browsers
# brave
super + shift + Return
    brave
    # firefox
super + alt + Return
    firefox

# open MS-teams
super + shift + {F1,F2,F3,F4,F5,F6,F7,F8,F9,F10,F11,F12}
    {teams,discord,signal-desktop,whatsapp-for-linux,nautilus,ranger} 


#
# rofi stuff
# 

# program launcher
super + space
	rofi -show drun

super + shift + space
    rofi -show run

# Wifi menu
super + w
    ~/apps/rofi-wifi-menu/rofi-wifi-menu.sh

# open clipmenu
super + v
	clipmenu

# open bitwarden menu
super + b
    bwmenu

# open power-menu
super + alt + Escape
    rofi -show power-menu -modi power-menu:rofi-power-menu 

super + a
    rofi -show calc -modi calc -no-show-match -no-sort

super + e
    rofi_trans

super + i
    rofimoji -f all

super + shift + i
    rofi -show emoji

super + y
    rofi-spotify

#
# launch stuff/scripts, reload stuff etc. 
#

# next background
super + n
	wpg -s ~/.config/wallpapers ; # pywal-discord -t abou # ; spicetify apply	

# no transparency
super + u
    picom-trans -c 100

# revert it / add transparency again
super + shift + u
    picom-trans -c -r
    # feh --bg-fill ~/.config/wallpapers/black/black.jpg

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# reload polybar
super + shift + Escape
	$HOME/.config/polybar/launch.sh

# reload spotifyd
super + shift + d
    spotifyd --no-daemon --device-name spotifydDellXPS15

# quit/restart bspwm
super + alt + q
    bspc quit 1 && pkill polybar && pkill picom

super + alt + r
	bspc wm -r

# Mullvad connect and disconnect respectively with shift
super + c
    mullvad connect

super + shift + c
    mullvad disconnect

#
# screenshot stuff
# 

# make selection screenshot and add it to folder ~/pictures/screenshots
super + shift + r
    maim -s -o ~/pictures/screenshots/$( date '+%F-%H-%M-%S').png

# make selection screenshot and add it to copy 
super + shift + s
    maim -s | xclip -selection clipboard -t image/png


#
# Media hotkeys
#

# VolumeControl
XF86AudioLowerVolume
	pulseaudio-control --volume-max 100 down
super + F2
    pulseaudio-control --voleme-max 100 down

XF86AudioRaiseVolume
	pulseaudio-control --volume-max 100 up
super + F3
    pulseaudio-control --volume-max 100 down

XF86AudioMute
	pulseaudio-control togmute
super + F1
    pulseaudio-control togmute

# BrightnessControl
XF86MonBrightnessUp
    xbacklight -inc 5
super + F7
    xbacklight -inc 5

XF86MonBrightnessDown
    xbacklight -dec 5
super + F6
    xbacklight -dec 5

#
# state/flags
#

# close and kill
super + shift + q    
	bspc node -c

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# # set the node flags
# super + ctrl + {m,x,y,z}
# 	bspc node -g {marked,locked,sticky,private}


#
# focus/swap
#

# focus/move the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last
alt + {grave,Tab}
    bspc node -f last

# # focus the older or newer node in the focus history
# super + {o,i}
# 	bspc wm -h off; \
# 	bspc node {older,newer} -f; \
# 	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'


#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
super + alt + {Left,Up,Down,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
super + alt + shift + {Left,Up,Down,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}


# resize mode
super + r : {h, j, k, l, alt + shift + h, alt + shift + j, alt + shift + k, alt + shift + l, shift + h, shift + j, shift + k, shift + l} bspc node {-v -20 0, -v 0 20,-v 0 -20,-v 20 0,-z right -20 0,-z top 0 20,-z bottom 0 -20,-z left 20 0, -z left -20 0,-z bottom 0 20,-z top 0 -20,-z right 20 0}

